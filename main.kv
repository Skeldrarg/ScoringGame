ScoringGameScreenManager:
    transition:NoTransition()
    IntroScreen:
    ScoringScreen:

<TeamLayout>

    orientation: "vertical"

    BoxLayout:
        orientation:"horizontal"
        id:teamname

        MDTextField:
            id: teamnameinput
            multiline: False
            hint_text: "Nom de l'Ã©quipe"

        MDRaisedButton:
            id:setteamname
            text: "OK"
            on_press:
                root.set_team_name()

    MDLabel:
        id: points_label
        text: "0"
        font_style:"H2"
        halign:"center"

    MDAnchorLayout:
        anchor_x:"center"
        anchor_y:"bottom"
        
        MDGridLayout:
            col:3
            rows:1
            adaptive_width:True
            orientation:"lr-tb"

            MDRaisedButton:
                id:addone
                text: "1"
                font_size:"30sp"
                adaptive_width:True
                on_press:
                    root.add_points(1)

            MDRaisedButton:
                id:addtwo
                text: "2"
                font_size:"30sp"
                adaptive_width:True
                on_press:
                    root.add_points(2)

            MDRaisedButton:
                id:addthree
                text: "3"
                font_size:"30sp"
                adaptive_width:True
                on_press:
                    root.add_points(3)


<IntroScreen>:
    name: "intro"

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            id: welcome
            text: "Bienvenue !"
            font_style:"H1"
            halign:"center"

        MDAnchorLayout:
            MDRaisedButton:
                id: play
                text: "Commencer"
                font_style:"Button"
                font_size:"30sp"
                halign:"center"
                on_press:
                    app.root.current = "scoring"

<ScoringScreen>:
    name: "scoring"

    GridLayout:
        cols: 2
        rows: 2
        spacing: [10,10]

        TeamLayout
        TeamLayout
        TeamLayout
        TeamLayout